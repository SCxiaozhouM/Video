@model Code.EntityFramework.Entity.mac_vod
@{
    Layout = null;
}

<div>
    @if (ViewBag.vType == "0")
    {
        <iframe id="video_iframe" src='@ViewBag.url' width="100%" height="50%" frameborder="0" scrolling="no" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true"></iframe>
    }
    else
    {
        <link href="https://cdnjs.cloudflare.com/ajax/libs/video.js/7.3.0/video-js.min.css" rel="stylesheet">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/video.js/7.3.0/video.min.js"></script>
        <section id="videoPlayer">
            <video id="example-video" controls preload="auto" class="video-js vjs-default-skin vjs-big-play-centered">
                <source src="@ViewBag.url" id="target">
            </video>
        </section>
        <script type="text/javascript">
            var player = videojs('example-video', { "poster": "", "controls": "true", "autoplay": "true" });
            console.log(player.volume());
        </script>
    }


    <div class="bf">正在播放：《@Model.Vod_Name》</div>
    <div class="bf">
        <span class="title">类型：</span><span>@Model.Vod_Class</span>
        <span class="title">地区：</span><span>@Model.Vod_Area </span>
        <span class="title">年份：</span><span>@Model.Vod_Year</span>
    </div>
</div>
