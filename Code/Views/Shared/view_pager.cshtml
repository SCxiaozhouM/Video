
@{
    Layout = null;
}

<div id="view_pager" class="carousel slide" style="margin:10px 0 15px 0;" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#view_pager" data-slide-to="0" class="active"></li>
        <li data-target="#view_pager" data-slide-to="1"></li>
        <li data-target="#view_pager" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://static.runoob.com/images/mix/img_mountains_wide.jpg">
        </div>
        <div class="carousel-item">
            <img src="https://static.runoob.com/images/mix/img_mountains_wide.jpg">
        </div>
        <div class="carousel-item">
            <img src="https://static.runoob.com/images/mix/img_fjords_wide.jpg">
        </div>
        @{int n = 0; }
        @foreach (var item in ViewBag.bannerList)
        {
            var cls = n == 0 ? "active" : "";
            <div class="carousel-item cls ">
                <div class="carousel-item">@item.Name</div>
                <img src="@item.Url">
            </div>
            n++;
        }

    </div>


    <a href="#view_pager" id="prev" data-slide="prev" class="carousel-control-prev"> <span class="carousel-control-prev-icon"></span></a>
    <a href="#view_pager" id="next" data-slide="next" class="carousel-control-next"> <span class="carousel-control-next-icon"></span></a>
</div>